<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cpu_info"
            style="@style/SystemTitleTextView"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.satansoft.android.androidtaskmanager.CPUInfoFragment"/>

        <TextView android:id="@+id/cpu_extended_info_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#33b5e5"
            android:textSize="18sp"
            android:text="@string/extended_cpu_info"/>

        <TextView android:id="@+id/cpu_extended_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="5dp"
            android:background="#FBFBFB"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/memory_info"
            style="@style/SystemTitleTextView"/>


        <!-- https://github.com/lzyzsd/CircleProgress -->
        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/memory_usage_arc_progress"
            style="@style/MemoryUsageArcProgress"
            android:background="@android:color/transparent"
            android:layout_width="300dp"
            android:layout_height="300dp"
            custom:arc_text_size="52sp"
            custom:arc_suffix_text_size="36sp"
            custom:arc_stroke_width="10dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</ScrollView>