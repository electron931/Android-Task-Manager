<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MemoryUsageArcProgress">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">#555</item>
        <item name="arc_bottom_text_size">20dp</item>
        <item name="arc_unfinished_color">#A4CA39</item>
        <item name="arc_finished_color">#A01749</item>
    </style>

    <style name="SystemTitleTextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#33b5e5</item>
        <item name="android:layout_margin">16dp</item>
    </style>


    <style name="AccelerateButton">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="HardwareInfoTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
